{
  "name": "gpg-signing-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Edge-deployed Git commit signing API using Hono on Cloudflare Workers with GPG-compatible signatures",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "db:create": "wrangler d1 create gpg-signing-audit",
    "db:migrate": "wrangler d1 execute gpg-signing-audit --file=./migrations/0001_initial.sql",
    "db:migrate:local": "wrangler d1 execute gpg-signing-audit --local --file=./migrations/0001_initial.sql",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-key": "bash scripts/generate-key.sh",
    "kv:create": "wrangler kv namespace create JWKS_CACHE",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "postinstall": "lefthook install",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typegen": "wrangler types"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "hono": "^4.10.6",
    "openpgp": "^6.2.2"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.8",
    "@kjanat/prettier-config": "^1.1.0",
    "@types/bun": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-istanbul": "~3.2.0",
    "@vitest/runner": "3.2.4",
    "@vitest/snapshot": "3.2.4",
    "eslint": "^9.39.1",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.47.0",
    "vitest": "~3.2.0",
    "wrangler": "^4.49.0"
  },
  "prettier": "@kjanat/prettier-config"
}
