{
  "name": "gpg-signing-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Edge-deployed Git commit signing API using Hono on Cloudflare Workers with GPG-compatible signatures",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "db:create": "wrangler d1 create gpg-signing-audit",
    "db:migrate": "wrangler d1 execute gpg-signing-audit --file=./migrations/0001_initial.sql",
    "db:migrate:local": "wrangler d1 execute gpg-signing-audit --local --file=./migrations/0001_initial.sql",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "fmt": "bun format",
    "format": "dprint fmt --config=.dprint.jsonc --config-discovery=false --allow-no-files",
    "generate-key": "bash scripts/generate-key.sh",
    "generate:api": "bun run scripts/generate-openapi.ts && cd client && oapi-codegen -config oapi-codegen.yaml openapi.json",
    "kv:create": "wrangler kv namespace create JWKS_CACHE",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "postinstall": "lefthook install; wrangler types &>/dev/null",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsgo --noEmit",
    "typegen": "wrangler types"
  },
  "peerDependencies": { "typescript": "^5.9.3" },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "hono": "^4.10.6",
    "openpgp": "^6.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.10",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@kjanat/prettier-config": "^1.1.0",
    "@types/bun": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@typescript/native-preview": "^7.0.0-dev.20251120.1",
    "@vitest/coverage-istanbul": ">=3.2.0 <4.0.0",
    "@vitest/runner": ">=3.2.0 <4.0.0",
    "@vitest/snapshot": ">=3.2.0 <4.0.0",
    "dprint": "^0.50.2",
    "eslint": "^9.39.1",
    "jiti": "^2.6.1",
    "jose": "^6.1.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.47.0",
    "vitest": ">=3.2.0 <4.0.0",
    "wrangler": "^4.49.1"
  },
  "prettier": "@kjanat/prettier-config"
}
